sudo: required
language: go
go:
  - 1.7
  - 1.8
  - tip
matrix:
  allow_failures:
    - go: tip
services:
  - docker
before_script:
  - sudo sysctl -w vm.max_map_count=262144
  - docker run --rm -p 9200:9200  -e "http.host=0.0.0.0" -e "transport.host=127.0.0.1" -e "bootstrap.memory_lock=true" -e "ES_JAVA_OPTS=-Xms1g -Xmx1g" docker.elastic.co/elasticsearch/elasticsearch:6.0.0-alpha2 elasticsearch -Expack.security.enabled=false -Enetwork.host=_local_,_site_ -Enetwork.publish_host=_local_
  - sleep 30
